[package]
name = "roulette_table"
version = "0.1.0"
description = "Provably-fair European Roulette table (USDC) with ORAO VRF + GOV control"
edition = "2021"

[lib]
crate-type = ["cdylib", "lib"]
name = "roulette_table"

[features]
no-entrypoint = []
no-idl = []
no-log-ix-name = []
cpi = ["no-entrypoint"]
idl-build = ["anchor-lang/idl-build", "anchor-spl/idl-build"]
default = []

[dependencies]
anchor-lang = { version = "0.31.1", features = ["init-if-needed"] }
anchor-spl = "0.31.1"

# ORAO VRF CPI - re-enabled
orao-solana-vrf = { version = "0.5.0", default-features = false, features = ["cpi"] }
